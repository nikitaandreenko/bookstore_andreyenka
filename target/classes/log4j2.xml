<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <property name="LOG_DIR">logs</property>
        <property name="pattern_file">%d{yyyy-MM-dd HH:mm:ss} [%M] %-5level %logger{5} - %msg%n</property>
        <property name="pattern_console">%d{HH:mm:ss} [%M] %-5level - %msg%n</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern_console}"/>
        </Console>

        <File name="File1" fileName="${LOG_DIR}/text.log">
            <PatternLayout pattern="${pattern_file}"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="com.company.dao.connection.DateSourÑe" level="info">
            <AppenderRef ref="File1"/>
        </Logger>
        <Logger name="com.company.dao.BookDaoImpl" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.company.service.BookService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.company.dao.UserDaoImpl" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.company.service.UserService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>

<!--        <Root level="warn">-->
<!--            <AppenderRef ref="Console"/>-->
<!--            <AppenderRef ref="File1" level="info"/>-->
<!--        </Root>-->
    </Loggers>

</Configuration>